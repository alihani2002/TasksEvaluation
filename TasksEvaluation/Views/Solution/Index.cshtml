@model IEnumerable<SolutionStudentDTO>

<div class="container mt-4">
    <div class="row">
        @foreach (var solution in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@solution.Notes</h5>
                        <p class="card-text">Submitted by: @solution.StudentName</p>
                        <p class="card-text">Assignment: @solution.AssignmentTitle</p>
                        <a href="@Url.Action("Details", new { id = solution.Id })" class="btn btn-primary">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
