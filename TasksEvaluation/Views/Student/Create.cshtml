@model TasksEvaluation.Core.DTOs.StudentDTO

@{
    ViewData["Title"] = "Create Student";
}

<section class="p-3 p-md-4 p-xl-5">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-6 bsb-tpl-bg-platinum">
                <div class="d-flex flex-column justify-content-between h-100 p-3 p-md-4 p-xl-5">

                    <img class="img-fluid rounded mx-auto" loading="lazy" src="~/img/logo.png" width="100%" height="20%" alt="Logo">
                    <p class="mb-0">Already have an account? <a asp-action="Index" class="link-secondary text-decoration-none">Back to List</a></p>
                </div>
            </div>
            <div class="col-12 col-md-6 bsb-tpl-bg-lotion">
                <div class="p-3 p-md-4 p-xl-5">
                    <div class="row">
                        <div class="col-12">
                            <div class="mb-5">
                                <h3>@ViewData["Title"]</h3>
                                <p>Create a new student.</p>
                            </div>
                        </div>
                    </div>
                    <form asp-action="Create" method="post">
                        <div class="row gy-3 gy-md-4 overflow-hidden">
                            <div class="col-12">
                                <label asp-for="FullName" class="form-label">Full Name <span class="text-danger">*</span></label>
                                <input asp-for="FullName" class="form-control" aria-required="true" placeholder="Full Name" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="MobileNumber" class="form-label">Mobile Number <span class="text-danger">*</span></label>
                                <input asp-for="MobileNumber" class="form-control" aria-required="true" placeholder="Mobile Number" />
                                <span asp-validation-for="MobileNumber" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="Email" class="form-label">Email <span class="text-danger">*</span></label>
                                <input asp-for="Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="ProfilePic" class="form-label">Profile Picture URL</label>
                                <input asp-for="ProfilePic" class="form-control" placeholder="Profile Picture URL" />
                                <span asp-validation-for="ProfilePic" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="GroupId" class="form-label">Group ID <span class="text-danger">*</span></label>
                                <input asp-for="GroupId" class="form-control" aria-required="true" placeholder="Group ID" />
                                <span asp-validation-for="GroupId" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <div class="d-grid">
                                    <button type="submit" class="btn bsb-btn-xl btn-primary">Create</button>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="row">
                        <div class="col-12">
                            <hr class="mt-5 mb-4 border-secondary-subtle">
                            <div class="text-end">
                                <p class="mb-4">Or register with</p>
                                <!-- External login providers logic can be added here if required -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
