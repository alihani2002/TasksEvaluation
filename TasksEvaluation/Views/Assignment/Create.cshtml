@model TasksEvaluation.Core.DTOs.AssignmentDTO

@{
    ViewData["Title"] = "Create Assignment";
}

<section class="p-3 p-md-4 p-xl-5">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-6 bsb-tpl-bg-platinum">
                <div class="d-flex flex-column justify-content-between h-100 p-3 p-md-4 p-xl-5">
                    <img class="img-fluid rounded mx-auto" loading="lazy" src="~/img/logo.png" width="100%" height="20%" alt="Logo">
                    <p class="mb-0">Already have an account? <a asp-action="Index" class="link-secondary text-decoration-none">Back to List</a></p>
                </div>
            </div>
            <div class="col-12 col-md-6 bsb-tpl-bg-lotion">
                <div class="p-3 p-md-4 p-xl-5">
                    <div class="row">
                        <div class="col-12">
                            <div class="mb-5">
                                <h3>@ViewData["Title"]</h3>
                                <p>Create a new assignment.</p>
                            </div>
                        </div>
                    </div>
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row gy-3 gy-md-4 overflow-hidden">
                            @* Your form fields *@
                            <div class="col-12">
                                <label asp-for="Title" class="form-label">Title <span class="text-danger">*</span></label>
                                <input asp-for="Title" class="form-control" aria-required="true" placeholder="Title" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="Description" class="form-label">Description</label>
                                <textarea asp-for="Description" class="form-control" placeholder="Description"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="DeadLine" class="form-label">Deadline <span class="text-danger">*</span></label>
                                <input asp-for="DeadLine" class="form-control" aria-required="true" placeholder="yyyy-MM-dd" />
                                <span asp-validation-for="DeadLine" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="GroupId" class="form-label">Group ID</label>
                                <input asp-for="GroupId" class="form-control" placeholder="Group ID" />
                                <span asp-validation-for="GroupId" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <div class="d-grid">
                                    <button type="submit" class="btn bsb-btn-xl btn-primary">Create</button>
                                </div>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
