@model TasksEvaluation.Core.DTOs.ResetPasswordDTO

@{
    ViewData["Title"] = "Reset Password";
}

<section class="bg-light p-3 p-md-4 p-xl-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-9 col-lg-7 col-xl-6 col-xxl-5">
                <div class="card border border-light-subtle rounded-4">
                    <div class="card-body p-3 p-md-4 p-xl-5">
                        <div class="text-center mb-4">
                            <a href="#!">
                                <img src="~/img/logo.png" alt="Logo" class="img-fluid" style="max-width: 80%; height: auto;">
                            </a>
                        </div>
                        <h4 class="text-center">Reset your password</h4>
                        <h2 class="text-center">Enter new password</h2>
                        <form asp-action="ResetPassword" method="post" class="mt-4">
                            <div class="form-floating mb-3">
                                <input asp-for="Email" class="form-control" placeholder="name@example.com" required />
                                <label asp-for="Email" class="form-label">Email</label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="Password" type="password" class="form-control" placeholder="Password" required />
                                <label asp-for="Password" class="form-label">New Password</label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <input type="hidden" asp-for="Token" />
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg">Reset Password</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
