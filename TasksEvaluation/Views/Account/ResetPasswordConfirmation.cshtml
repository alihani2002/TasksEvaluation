@{
    ViewData["Title"] = "Reset Password Confirmation";
}

<section class="bg-light p-3 p-md-4 p-xl-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-9 col-lg-7 col-xl-6 col-xxl-5">
                <div class="card border border-light-subtle rounded-4">
                    <div class="card-body p-3 p-md-4 p-xl-5">
                        <div class="text-center mb-4">
                            <a href="#!">
                                <img src="~/img/logo.png" alt="Logo" class="img-fluid" style="max-width: 80%; height: auto;">
                            </a>
                        </div>
                        <h4 class="text-center">Password reset successful</h4>
                        <h2 class="text-center">You can now log in with your new password</h2>
                        <div class="d-grid">
                            <a href="@Url.Action("Login", "Account")" class="btn btn-primary btn-lg">Login</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
