<!-- Views/Account/Login.cshtml -->
@model TasksEvaluation.Core.DTOs.LoginDTO

@{
    ViewData["Title"] = "Login";
}

<section class="bg-light p-3 p-md-4 p-xl-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-9 col-lg-7 col-xl-6 col-xxl-5">
                <div class="card border border-light-subtle rounded-4">
                    <div class="card-body p-3 p-md-4 p-xl-5">
                        <div class="text-center mb-4">
                            <a href="#!">
                                <img src="~/img/logo.png" alt="BootstrapBrain Logo" class="img-fluid" style="max-width: 80%; height: auto;">
                            </a>
                        </div>
                        <h4 class="text-center">Welcome back you've been missed!</h4>
                        <h2 class="text-center">Login</h2>
                        <form asp-action="Login" method="post" class="mt-4">
                            <div class="form-floating mb-3">
                                <input asp-for="Email" class="form-control" placeholder="name@example.com" required />
                                <label asp-for="Email" class="form-label">Email</label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="Password" type="password" class="form-control" placeholder="Password" required />
                                <label asp-for="Password" class="form-label">Password</label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-check mb-3">
                                <input class="form-check-input" asp-for="RememberMe" />
                                <label class="form-check-label text-secondary" asp-for="RememberMe">
                                    Keep me logged in
                                </label>
                            </div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg">Login</button>
                            </div>
                        </form>

                        <div class="row">
                            <div class="col-12">
                                <hr class="mt-5 mb-4 border-secondary-subtle">
                                <div class="d-flex gap-2 gap-md-4 flex-column flex-md-row justify-content-md-end">
                                    <a asp-action="ForgotPassword" asp-controller="Account" class="link-secondary text-decoration-none">Forgot password</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
