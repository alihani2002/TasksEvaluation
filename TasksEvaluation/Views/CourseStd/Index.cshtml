@model IEnumerable<CourseDTO>

@{
    ViewData["Title"] = "Courses";
}

<h2>Courses</h2>

<div class="row">
    @foreach (var course in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Name of course : @course.Title</h5>
                    <p class="card-text">IsCompleted @course.IsCompleted</p>
                    <a href="@Url.Action("Details", "CourseStd", new { id = course.Id })" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }
</div>
