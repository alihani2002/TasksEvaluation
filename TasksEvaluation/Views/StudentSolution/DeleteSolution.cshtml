@model TasksEvaluation.Core.DTOs.SolutionDTO

@{
    ViewData["Title"] = "Delete Solution";
}

<h2>Delete Solution</h2>

<div class="alert alert-danger" role="alert">
    Are you sure you want to delete this solution?
</div>

<div class="card mb-4">
    <div class="card-body">
        <h5 class="card-title">Solution for Assignment: @Model.AssignmentId</h5>
        <p>Notes: @Model.Notes</p>
        <p><small class="text-muted">Uploaded on: @Model.EntryDate.ToString()</small></p>
    </div>
</div>

<form asp-action="DeleteSolutionConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Details" asp-route-assignmentId="@Model.AssignmentId" class="btn btn-secondary">Cancel</a>
</form>
