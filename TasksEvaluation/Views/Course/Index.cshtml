@model IEnumerable<CourseDTO>

@{
    ViewData["Title"] = "Course List";
}

<link href="https://unpkg.com/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet">

<style>
    .action-buttons a {
        margin-right: 5px;
    }

        .action-buttons a .fa {
            font-size: 14px; /* Adjust the size as needed */
        }
</style>

<h2>Course List</h2>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="fa fa-plus"></i> Create New
    </a>
</p>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Is Completed</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.Title</td>
                    <td>@course.IsCompleted</td>
                    <td class="action-buttons">
                        <a asp-action="Edit" asp-route-id="@course.Id" class="btn btn-primary btn-xs">
                            <i class="fa fa-pencil-alt"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@course.Id" class="btn btn-info btn-xs">
                            <i class="fa fa-eye"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@course.Id" class="btn btn-danger btn-xs">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
